    <script>
        var galleryThumbs = new Swiper('.gallery-thumbs', {
          spaceBetween: 10,
          slidesPerView: 4,
          freeMode: true,
          watchSlidesVisibility: true,
          watchSlidesProgress: true,
          loop:true
        });
        var galleryTop = new Swiper('.gallery-top', {
          spaceBetween: 10,
          navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
          },
          loop:true,
          thumbs: {
            swiper: galleryThumbs
          }
        });
        window.onload = ()=>{
            if(window.innerWidth <= 910){
                $('.property-attributes-wrapper').append($('.status-container'));
            }else{
                $('.property-attributes-wrapper').append($('.description-container'));
            }
        }
        $('.menu').click(()=>{
            $('.navigator-wrapper').addClass('active');
            $('.menu').fadeOut(200)
        }),
        $('.close').click(()=>{
            $('.navigator-wrapper').removeClass('active');
            $('.menu').fadeIn(1200);
        })
        window.onresize = () =>{
            if(window.innerWidth <= 914){
                $('.property-attributes-wrapper').append($('.status-container'));
            }else{
                $('.property-attributes-wrapper').append($('.description-container'));
            }
        }
