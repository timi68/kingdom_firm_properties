    <!-- //--------  Script Javascript  ---------- -->
    <script src="../js/jquery.min.js"></script>
    <script>
        !function(j){
            j().ready(()=>{  
                
                let counter = 0;

                j('.toggle-email').click(()=>{
                    j('.toggle-email').toggleClass("active"),
                    j('.email-verification-section').toggleClass("active")
                }),
                j('.toggle-phone').click(()=>{
                    j('.toggle-phone').toggleClass("active"),
                    j('.phone-verification-section').toggleClass("active")
                }),
                j('.get-email').click(e=>{
                    e.preventDefault();
                    const form = document.querySelector(".email-form1");
                    if(!form.checkValidity()){
                        j(form).addClass("was-validated")
                        return
                    };
                    (async () => {
                        const fet  = await fetch('/sendEmailCode',{
                            method: "POST",
                            body:JSON.stringify({
                                email : j(".userEmail").val()
                            }),
                            headers: {
                                "Content-Type":"application/json"
                            }
                        })

                        const err = await fet.error,
                        res = await fet.text();

                        if(!err && res == "success"){
                            j('.email-message').removeClass('error').addClass("success").html("A verification code has been sent to the number provided"),                         
                            j(form).addClass("not-active"),
                            j('.email-form2').addClass('active');

                        }else{
                            j('.email-message').removeClass('success').addClass("error").html("It seems the email you provide does not exist")
                        }
                    })()
                
                }),
                j('.verify-email').click(e=>{
                    e.preventDefault();
                    const form = document.querySelector(".email-form2");
                    if(!form.checkValidity()){
                        j(form).addClass("was-validated")
                        return
                    }

                    if(j('.email-code').val().length < 5){
                        j('.email-message')
                        .addClass("error")
                        .removeClass('success')
                        .html("Invalid Code");

                        return
                    }
                    if(counter > 2){
                        j(".email-message").addClass('error').removeClass('success').html("It seems you made alot of attempts. Please try again after <span class='timer'>60s</span>")
                        const timer_reducer = 1
                        var interval = setInterval(() => {
                            j('.email-message').find('span').html(`${60 - timer_reducer}s`);

                            timer_reducer += 1;

                            if(timer_reducer == 60){
                                clearInterval(interval);

                                counter = 0
                            }
                        }, 1000);

                        return
                    }

                    (async () => {
                        const fet  = await fetch('/verify/email',{
                            method: "POST",
                            body:JSON.stringify({
                                email : j(".userEmail").val(),
                                code : j('.email-code').val()
                            }),
                            headers: {
                                "Content-Type":"application/json"
                            }
                        })

                        const err = await fet.error,
                        res = await fet.text();

                        if(!err && res == "success"){

                            var html =  `<div class="body-text">
                                            <div class="small-text verified-text">
                                                <p class="verified">Your email <span class="email"><%= user.email %></span> has been <span class="verify">Verified Successfully</span></p>
                                            </div>
                                        </div>`;
                            
                            const section = document.querySelector('.email-verification-body-form');

                            section.innerHTML = html

                        }else{
                            j('.email-message').removeClass('success').addClass("error").html("Invalid Code");
                        }

                        counter += 1
                    })()
                
                }),
                j('.verify-phone').click(e=>{
                    e.preventDefault();
                    const form = document.querySelector(".phone-form1");
                    if(!form.checkValidity()){
                        j(form).addClass("was-validated");
                        return
                    }

                    if(counter > 2){
                        j(".message").addClass('error').removeClass('success').html("It seems you made alot of attempts. Please try again after <span class='timer'>60s</span>")
                        const timer_reducer = 1
                        var interval = setInterval(() => {
                            j('.message').find('span').html(`${60 - timer_reducer}s`);

                            timer_reducer += 1;

                            if(timer_reducer == 60){
                                clearInterval(interval);

                                counter = 0
                            }
                        }, 1000);

                        return
                    }
                    
                    const reg =  new RegExp(/[\D]/),
                    number = j('.phone-number').val(),
                    match = number.match(reg);

                    if(match){
                        j('.phone-message').addClass("error").removeClass("success").html("The number provided is not a valid code.");
        
                        return;
                    };

                    (async () => {
                        const fet  = await fetch('/verify/phone',{
                            method: "POST",
                            body:JSON.stringify({
                                number : j(".phone-number").val(),
                            }),
                            headers: {
                                "Content-Type":"application/json"
                            }
                        })

                        const err = await fet.error,
                        res = await fet.text();

                        if(!err && res == "success"){                           
                            var html =  `<div class="body-text">
                                            <div class="small-text verified-text">
                                                <p class="verified">Your number <span class="number">${number}</span> has been <span class="verify">Verified Successfully</span></p>
                                            </div>
                                        </div>`;
                            
                            const section = document.querySelector('.phone-verification-body-form');
                            
                            section.innerHTML = html

                        }else{
                            j('.phone-message').removeClass('success').addClass("error").html("Invalid number");
                        }

                        counter += 1
                    })()
                
                }),
                 
                j('.resend-email').click(e => {
                    e.preventDefault()

                    if(counter > 2){
                        j(".email-message").addClass('error').removeClass('success').html("It seems you made alot of attempts. Please try again after <span class='timer'>60s</span>")
                        const timer_reducer = 1
                        var interval = setInterval(() => {
                            j('.email-message').find('span').html(`${60 - timer_reducer}s`);

                            timer_reducer += 1;

                            if(timer_reducer == 60){
                                clearInterval(interval);

                                counter = 0
                            }
                        }, 1000);

                        return
                    }
                    
                    const get = document.querySelector('.get-email');
                    j(get).click();

                    counter += 1
                })
        
                j('.m-menu').click(()=>{
                    j('.linker').toggleClass('active');
            
                    j('.m-close').click(()=>{
                        j('.linker').removeClass('active')
                    })
                })
                
                j('.alert .close').click(e => {
                    j('.alert').fadeOut(1000);
                }),
                setTimeout(() => {
                    j('.alert').fadeOut(1000)
                }, 5000);
            })
        }(jQuery)
    </script>   
